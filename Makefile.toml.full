[tasks.full-check]
description = "Complete validation (CI + benchmarks + docs + audit)"
dependencies = ["ci", "benchmarks", "doc", "audit"]

[tasks.quick]
description = "Quick development iteration (check + test-quick)"
dependencies = ["check", "test-quick"]

[tasks.fix]
